{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (application)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "west",
            "args": [
                "build",
                "${workspaceFolder}/app",
                "-d",
                "${workspaceFolder}/app/build",
                "-p",
                "auto",
                "-b",
                "${input:board}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "Build (application with OTA)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "west",
            "args": [
                "build",
                "${workspaceFolder}/app",
                "-d",
                "${workspaceFolder}/app/build",
                "-DEXTRA_CONF_FILE=overlay-ota.conf",
                "-p",
                "auto",
                "-b",
                "${input:board}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "Build (bootloader)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "west",
            "args": [
                "build",
                "${workspaceFolder}/deps/bootloader/mcuboot/boot/zephyr",
                "-d",
                "${workspaceFolder}/deps/bootloader/mcuboot/boot/zephyr/build",
                "-DAPPLICATION_CONFIG_DIR=${workspaceFolder}/app",
                "-p",
                "auto",
                "-b",
                "${input:board}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "Clean (application)",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/app/build",
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean (bootloader)",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/deps/bootloader/mcuboot/boot/zephyr/build",
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Flash (app)",
            "type": "shell",
            "command": "west",
            "args": [
                "flash",
                "-d",
                "${workspaceFolder}/app/build",
                "--runner",
                "openocd"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Flash (bootloader)",
            "type": "shell",
            "command": "west",
            "args": [
                "flash",
                "-d",
                "${workspaceFolder}/deps/bootloader/mcuboot/boot/zephyr/build",
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Update (west)",
            "type": "shell",
            "command": "west",
            "args": [
                "update"
            ]
        },
        {
            "label": "MenuConfig",
            "type": "shell",
            "command": "west",
            "args": [
                "build",
                "${workspaceFolder}/app",
                "-d",
                "${workspaceFolder}/app/build",
                "-p",
                "auto",
                "-b",
                "${input:board}",
                "-t",
                "menuconfig"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "inputs": [
        {
            "id": "board",
            "type": "pickString",
            "default": "nucleo_u575zi_q",
            "description": "See https://docs.zephyrproject.org/latest/boards/st",
            "options": ["nucleo_u575zi_q", "nucleo_f767zi"]
        }
    ]
}