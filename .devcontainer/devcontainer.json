{
  "image": "ghcr.io/zephyrproject-rtos/zephyr-build:latest",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workdir/app,type=bind",
  "workspaceFolder": "/workdir",
  "onCreateCommand": "app/.devcontainer/setup.sh",
  "mounts": [
    "source=${localWorkspaceFolder}/.vscode/,target=/workdir/.vscode,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        // Hush CMake
        "cmake.configureOnOpen": false,
        // IntelliSense
        "C_Cpp.default.compilerPath": "/opt/toolchains/zephyr-sdk-0.16.5-1/arm-zephyr-eabi/bin/arm-zephyr-eabi-gcc",
        "C_Cpp.default.compileCommands": "${workspaceFolder}/app/build/compile_commands.json",
        // File Associations
        "files.associations": {}
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python",
        "ms-vscode.vscode-embedded-tools",
        "marus25.cortex-debug",
        "plorefice.devicetree",
        "PKief.material-icon-theme",
        "streetsidesoftware.code-spell-checker",
        "eamodio.gitlens",
        "nick-rudenko.back-n-forth",
        "ms-vscode.hexeditor"
      ]
    }
  },
  // Uncomment these to use on your local PC
  // Access USB port from the docker container
  // "runArgs": [
  //   "--device=/dev/bus/usb/"
  // ]
}