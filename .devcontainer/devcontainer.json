{
  "image": "ghcr.io/zephyrproject-rtos/zephyr-build:latest",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workdir/app,type=bind",
  "workspaceFolder": "/workdir",
  "postCreateCommand": "app/scripts/setup.sh",
  "mounts": [
    "source=${localWorkspaceFolder}/.vscode/,target=/workdir/.vscode,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        // Hush CMake
        "cmake.configureOnOpen": false,
        // IntelliSense
        "C_Cpp.default.compilerPath": "${ZEPHYR_TOOLCHAIN_PATH}/arm-zephyr-eabi/bin/arm-zephyr-eabi-gcc",
        "C_Cpp.default.compileCommands": "${workspaceFolder}/app/build/compile_commands.json",
        // cortex-debug extension config
        "cortex-debug.openocdPath.linux": "${ZEPHYR_TOOLCHAIN_PATH}/sysroots/x86_64-pokysdk-linux/usr/bin/openocd",
        // File Associations
        "files.associations": {}
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python",
        "ms-vscode.vscode-embedded-tools",
        "marus25.cortex-debug",
        "plorefice.devicetree",
        "PKief.material-icon-theme",
        "streetsidesoftware.code-spell-checker",
        "eamodio.gitlens",
        "ms-vscode.hexeditor"
      ]
    }
  },
  "containerEnv": {
    "ZEPHYR_TOOLCHAIN_PATH": "/opt/toolchains/zephyr-sdk-0.16.8",
    "ZEPHYR_BASE": "/workdir/deps/zephyr"
  },
  // Uncomment these lines to access USB port from the docker container
  "runArgs": [
    // Grants access to all devices
    "--privileged",
    // Maps USB devices into the container
    "--device=/dev/bus/usb:/dev/bus/usb"
  ]
}
